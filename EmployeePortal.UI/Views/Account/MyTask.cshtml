@model TaskViewModel

@{
    ViewData["Title"] = "MyTask";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Date Validation Example</title>
</head>


<body>
    <div class="container">
        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-feild">
                    <span class="fa fa-calendar"></span>
                    <label asp-for="Date" class="form-label">Date</label>
                    <b><span class="text-danger">*</span> :</b>

                    <input asp-for="Date" class="form-control" />
                </div>
            </div>
            <div class="form-group col flex pt-3">
                <div class="input-feild">
                    <span class="fa fa-user"></span>
                    <label asp-for="Description" class="form-label">Descreption</label>
                    <b><span class="text-danger">*</span> :</b>
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-info" value="Submit">Submit</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</body>
</html>